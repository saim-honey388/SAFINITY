#:kivy 2.2.1

# Color definitions
#:set primary_color (0.2, 0.6, 0.3, 1)  # Dark green
#:set secondary_color (0.3, 0.7, 0.4, 1)  # Light green
#:set text_color (1, 1, 1, 1)  # White

<WelcomeScreen>:
    canvas.before:
        Color:
            rgba: primary_color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'
        
        Label:
            id: welcome_label
            text: 'Welcome to Safinity!'
            font_size: '32sp'
            size_hint_y: None
            height: '60dp'
            color: text_color
            bold: True
            on_touch_down: root.manager.current = 'profile_view'
        
        Widget:
            size_hint_y: 0.3
            
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'center_y': 0.5}
            
            Button:
                text: 'Logout'
                background_color: (0.8, 0.2, 0.2, 1)  # Red
                color: text_color
                size_hint_y: None
                height: '40dp'
                font_size: '16sp'
                bold: True
                on_release: root.logout()
        
        Widget:
            size_hint_y: 0.3 