#:kivy 2.2.1

<PhoneNumberScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(15)

        # Logo and title section
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.3
            spacing: dp(15)

            AsyncImage:
                source: 'logo.png'
                size_hint: None, None
                size: dp(80), dp(80)
                pos_hint: {'center_x': 0.5}
                allow_stretch: True
                keep_ratio: True

            Label:
                text: "SAFINITY"
                font_size: '24sp'
                bold: True
                color: 0, 0, 0, 1
                size_hint_y: None
                height: dp(30)
                halign: 'center'

            Label:
                text: "Enter your phone number"
                font_size: '14sp'
                color: (0.223, 0.510, 0.478, 1)
                size_hint_y: None
                height: dp(30)
                halign: 'center'

        Widget:
            size_hint_y: 0.1

        # Phone number input section
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: dp(300), dp(50)
            pos_hint: {'center_x': 0.5}
            spacing: dp(10)

            # Country code display
            Label:
                id: country_code
                text: '+'
                size_hint_x: None
                width: dp(50)
                color: 0, 0, 0, 1
                font_size: '16sp'
                halign: 'right'
                valign: 'center'
                text_size: self.size

            # Phone number input
            TextInput:
                id: phone_input
                hint_text: 'Phone number'
                multiline: False
                size_hint_x: 1
                font_size: '16sp'
                padding: [dp(10), (self.height - self.line_height) / 2]
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                cursor_color: 0, 0, 0, 1
                input_filter: 'int'
                write_tab: False

        Widget:
            size_hint_y: 0.2

        # Continue button
        Button:
            text: "Continue"
            size_hint_y: None
            height: '48dp'
            background_color: 0.223, 0.510, 0.478, 1  # Teal color
            on_release: root.validate_and_send_code()

        Widget:
            size_hint_y: 0.2 