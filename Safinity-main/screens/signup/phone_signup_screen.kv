#:kivy 2.2.1

<PhoneSignupScreen>:
    name: 'phone_signup'
    phone_number: phone_number
    verification_code: verification_code
    canvas.before:
        Color:
            rgba: 0.223, 0.510, 0.478, 1  # Dark green background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '10dp'
        size_hint: 1, 1

        Widget:
            size_hint_y: 0.2

        Label:
            text: 'Phone Sign Up'
            font_size: '24sp'
            bold: True
            color: 1, 1, 1, 1  # White text
            size_hint_y: None
            height: '50dp'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '100dp'
            spacing: '10dp'

            TextInput:
                id: phone_number
                hint_text: 'Enter Phone Number (e.g., +92336507022)'
                multiline: False
                size_hint_y: None
                height: '40dp'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0.2, 0.2, 0.2, 1
                cursor_color: 0.223, 0.510, 0.478, 1
                padding: [15, 10, 15, 10]
                hint_text_color: 0.6, 0.6, 0.6, 1
                background_normal: ''
                background_active: ''
                write_tab: False
                focus: False

            TextInput:
                id: verification_code
                hint_text: 'Enter Verification Code'
                multiline: False
                size_hint_y: None
                height: '40dp'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0.2, 0.2, 0.2, 1
                cursor_color: 0.223, 0.510, 0.478, 1
                padding: [15, 10, 15, 10]
                hint_text_color: 0.6, 0.6, 0.6, 1
                background_normal: ''
                background_active: ''
                write_tab: False
                focus: False
                disabled: not root.verification_sent

        Widget:
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '150dp'
            spacing: '10dp'

            Button:
                text: 'Send Code'
                size_hint_y: None
                height: '40dp'
                background_normal: ''
                background_color: 1, 1, 1, 1
                color: 0.223, 0.510, 0.478, 1
                on_press: root.send_code()
                font_size: '16sp'
                bold: True
                disabled: root.verification_sent
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

            Button:
                text: 'Verify Code'
                size_hint_y: None
                height: '40dp'
                background_normal: ''
                background_color: 1, 1, 1, 1
                color: 0.223, 0.510, 0.478, 1
                on_press: root.verify()
                font_size: '16sp'
                bold: True
                disabled: not root.verification_sent
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

            Button:
                text: 'Back to Sign Up'
                size_hint_y: None
                height: '40dp'
                background_normal: ''
                background_color: 1, 1, 1, 1
                color: 0.223, 0.510, 0.478, 1
                on_press: root.back_to_signup_selection()
                font_size: '16sp'
                bold: True
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

        Widget:
            size_hint_y: 0.2 